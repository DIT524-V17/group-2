<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:layout_alignParentBottom="true"
        android:name="com.group02.guard.ToolbarBottomFragment"
        tools:layout="@layout/toolbar_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottomBar"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context="com.appolica.interactiveinfowindow.fragment.MapInfoWindowFragmenty"
        android:layout_above="@id/bottomBar"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomBar"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorMutedBlack"
        android:buttonTint="@color/com_facebook_button_background_color"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/switchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/switch1"
        android:layout_centerHorizontal="true"
        android:text="Activate FollowMe"
        android:textColor="@color/colorMutedBlack"/>

    <!--<ToggleButton-->
    <!--android:id="@+id/toggle1"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:text="Toggle"/>-->


</RelativeLayout>


