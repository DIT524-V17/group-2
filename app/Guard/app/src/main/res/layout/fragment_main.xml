<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group02.guard.MainFragment"
    android:orientation="vertical">

    <Button
        android:id="@+id/controlButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_controller"
        android:text="@string/controllerActivity"
        android:drawableTint="@color/colorMutedLight"
        android:layout_weight="0.3"/>

    <Button
        android:id="@+id/mapsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_map"
        android:text="@string/mapActivity"
        android:drawableTint="@color/colorMutedLight"
        android:layout_weight="0.3"/>

    <Button
        android:id="@+id/gpsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_gps"
        android:text="@string/gpsActivity"
        android:drawableTint="@color/colorMutedLight"
        android:layout_weight="0.3" />


</LinearLayout>
