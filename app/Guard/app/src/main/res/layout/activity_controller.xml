<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorMutedBlack"
    tools:context="com.group02.guard.ControllerActivity">

    <include layout="@layout/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/toolbar_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.group02.guard.Control
        android:id="@+id/controlView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/coords"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_above="@id/controlView"/>

</RelativeLayout>
