    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:onClick="enterDeveloper"-->
    <!--android:text="developer"-->
    <!--android:textAppearance="@style/TextAppearance.AppCompat.Caption" />-->


</LinearLayout>